{
    "compilerOptions": {
      "target": "es2020",                        
      "module": "NodeNext",                      
      "moduleResolution": "NodeNext",            
      "lib": ["es2020"],
      "allowJs": true,
      "outDir": "build",
      "rootDir": "src",
      "baseUrl": "./",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "jest"],
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.ts"]
}